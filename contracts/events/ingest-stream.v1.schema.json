{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/contracts/events/ingest-stream.v1.schema.json",
  "title": "IngestStreamEventV1",
  "allOf": [
    { "$ref": "envelope.v1.schema.json" },
    {
      "type": "object",
      "properties": {
        "event_type": { "const": "ingest.stream" },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["dataset", "topic", "partition", "offset"],
          "properties": {
            "dataset": { "type": "string", "minLength": 2 },

            "topic": { "type": "string", "minLength": 1 },
            "partition": { "type": "integer", "minimum": 0 },
            "offset": { "type": "integer", "minimum": 0 },

            "key": { "type": ["string", "null"] },

            "raw_uri": { "type": "string" },
            "source_event_id": { "type": "string" }
          }
        }
      }
    }
  ]
}
